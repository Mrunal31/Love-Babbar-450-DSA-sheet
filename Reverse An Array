public class ReverseAanArray {
    public static void reverse(int[] arr){
        int i = 0,j = arr.length - 1;
        while(i < j){
           int temp = arr[i];
           arr[i] = arr[j];
           arr[j] = temp;
           i++;
           j--;
        }
       for(int z=0;z<arr.length;z++){
           System.out.print(arr[z]+ " ");
       }
    }
    public static void main(String args[]){
       int[] arr = new int[]{1,2,3,4};
       reverse(arr);
    }
}
